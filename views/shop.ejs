<%- include('includes/head.ejs') %>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="container">
                <div class="page-header">
                    <h1>منتجاتنا</h1>
                    <p class="subtitle">اكتشف مجموعتنا المميزة من المنتجات</p>
                </div>

                <div class="products-grid">
                    
                    <% prods.forEach(product => { %>
                        <article class="product-card">
                            <div class="product-image">
                                <img src="https://computecheg.com/wp-content/uploads/2025/05/Nude-Boba-Milk-Tea-Logo-2025-05-19T172028.656.png" alt="<%= product.title %>">
                            </div>
                            <div class="product-content">
                                <h3><%= product.title %></h3>
                                <p>$99.99</p>
                                <p>وصف قصير للمنتج...</p>
                            </div>
                            <div classs="product-actions">
                                <button class="btn">أضف للسلة</button>
                            </div>
                        </article>
                    <% }); %>
                    </div>
            </div>
        <% } else { %>
            <div class="container">
                <h2 class="no-products">لا توجد منتجات متاحة حاليًا</h2>
            </div>
        <% } %>
    </main>

<%- include('includes/end.ejs') %>